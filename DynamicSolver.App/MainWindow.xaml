<Window x:Class="DynamicSolver.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:reactiveUi="clr-namespace:ReactiveUI;assembly=ReactiveUI"
        mc:Ignorable="d"
        Title="Dynamic Solver" 
        Height="600" Width="800"
        MinHeight="600" MinWidth="800"
        DataContext="{Binding ApplicationScreen, RelativeSource={RelativeSource Self}, Mode=OneTime}">
    <reactiveUi:RoutedViewHost Router="{Binding Router}"/>
</Window>