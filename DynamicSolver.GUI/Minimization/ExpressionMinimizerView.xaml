<UserControl x:Class="DynamicSolver.GUI.Minimization.ExpressionMinimizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicSolver.GUI.Minimization"
             x:Name="UserControl" mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ViewModel,  ElementName=UserControl}">
        <local:ExpressionInputView ViewModel="{Binding InputViewModel}"></local:ExpressionInputView>
        <Button Content="Minimize" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,5,0" Padding="5,0" 
                Command="{Binding Calculate}"
                Visibility="{Binding ShowCalculateButton, Converter={StaticResource BoolToVisibility}}" />
        <local:MinimizationResultView ViewModel="{Binding ResultViewModel}"></local:MinimizationResultView>
    </StackPanel>
</UserControl>
