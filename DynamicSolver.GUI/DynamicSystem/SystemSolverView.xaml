<UserControl x:Class="DynamicSolver.GUI.DynamicSystem.SystemSolverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dynamicSystem="clr-namespace:DynamicSolver.GUI.DynamicSystem"             
             xmlns:oxy="http://oxyplot.org/wpf"
             x:Name="UserControl" mc:Ignorable="d">
    <Grid DataContext="{Binding ViewModel,  ElementName=UserControl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <dynamicSystem:SystemInputView ViewModel="{Binding InputViewModel}"></dynamicSystem:SystemInputView>
        <TextBlock Grid.Row="1" Text="{Binding Error, Mode=OneWay}" Foreground="Red"></TextBlock>
        <oxy:PlotView Grid.Row="2" Model="{Binding FirstPlotModel}"></oxy:PlotView>
        <oxy:PlotView Grid.Row="3" Model="{Binding SecondPlotModel}"></oxy:PlotView>
    </Grid>
</UserControl>

