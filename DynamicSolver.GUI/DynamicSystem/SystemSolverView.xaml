<UserControl x:Class="DynamicSolver.GUI.DynamicSystem.SystemSolverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dynamicSystem="clr-namespace:DynamicSolver.GUI.DynamicSystem"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             x:Name="UserControl" mc:Ignorable="d">
    <Grid DataContext="{Binding ViewModel,  ElementName=UserControl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <dynamicSystem:SystemInputView ViewModel="{Binding InputViewModel}"></dynamicSystem:SystemInputView>
        <TextBlock Grid.Row="1" Text="{Binding Error, Mode=OneWay}" Foreground="Red"></TextBlock>
        <d3:ChartPlotter Grid.Row="2" Name="FirstPlotter" VerticalAlignment="Stretch"></d3:ChartPlotter>
        <d3:ChartPlotter Grid.Row="3" Name="SecondPlotter" VerticalAlignment="Stretch"></d3:ChartPlotter>
    </Grid>
</UserControl>

